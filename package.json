{
  "name": "scrap",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/scrap.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^12 || ^14"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "root": true,
    "rules": {
      "no-unused-vars": "warn"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "prettier"
    ],
    "settings": {
      "jest": {
        "version": 27
      },
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib",
    "public"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "rm -rf packages/*/public packages/*/lib",
    "lint": "eslint . --ext .json,.js,.jsx,.ts,.tsx",
    "test": "yarn workspaces run jest",
    "reset": "rm -rf node_modules packages/*/node_modules",
    "serve": "yarn workspace @dev/app serve",
    "start": "yarn workspace @dev/app start",
    "dedupe": "yarn-deduplicate && yarn",
    "dedupe:list": "yarn-deduplicate --list",
    "update": "yarn upgrade-interactive",
    "update:latest": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.2",
    "type-coverage": "^2.19.0",
    "typescript": "^4.5.4",
    "yarn-deduplicate": "^3.1.0"
  }
}
