{
  "name": "scrap",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/scrap.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || ^18",
    "yarn": "^1.22.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:cypress/recommended",
      "plugin:import/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "prettier"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/ban-ts-comment": "warn",
      "@typescript-eslint/ban-types": "warn",
      "@typescript-eslint/consistent-type-imports": [
        "warn",
        {
          "fixStyle": "inline-type-imports"
        }
      ],
      "@typescript-eslint/no-empty-function": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "import/default": "warn",
      "import/named": "warn",
      "import/no-extraneous-dependencies": "warn",
      "import/no-unresolved": "off",
      "no-constant-condition": "warn",
      "no-control-regex": "warn",
      "no-extra-boolean-cast": "warn",
      "no-irregular-whitespace": "warn",
      "no-useless-escape": "warn",
      "no-var": "warn"
    },
    "settings": {
      "jest": {
        "version": "detect"
      },
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib/",
    "public/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "rm -rf packages/*/public packages/*/lib packages/*/yarn-error.log yarn-error.log",
    "lint": "eslint . --ext .json,.js,.jsx,.ts,.tsx",
    "test": "yarn workspaces run jest",
    "test:e2e": "cypress run",
    "reset": "rm -rf node_modules packages/*/node_modules",
    "serve": "yarn workspace @dev/app serve",
    "start": "yarn workspace @dev/app start",
    "dedupe:list": "yarn-deduplicate --list",
    "update": "yarn upgrade-interactive",
    "update:browserlist": "browserslist --update-db",
    "update:dedupe": "yarn-deduplicate && yarn",
    "update:latest": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "cypress": "^12.9.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.5",
    "type-coverage": "^2.25.0",
    "typescript": "^5.0.3",
    "yarn-deduplicate": "^6.0.1"
  }
}
